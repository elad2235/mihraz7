pipeline {
    agent { docker 'elad2235/mihraz7:env' } 
    stages {
			stage('Setup Dependency') {
				steps {
					    withEnv(["HOME=${env.WORKSPACE}"]) {
					      sh "pip3 install -r requirements.txt --user"
							sh "export DJANGO_SETTINGS_MODULE=mihraz7.settings"
    					}
				}


        }
			stage('Run Tests') {
				steps {
					    withEnv(["HOME=${env.WORKSPACE}"]) {
					      sh "python3 -m xmlrunner discover mihraz7/ -o ./test-reports/junit/"
						  sh "flake8 --ignore W191,E501 --output-file flake8.txt"
						  sh "flake8_junit flake8.txt ./flake/flake8_junit.xml"
    					}
						
				}
				post {
                always {
					withEnv(["HOME=${env.WORKSPACE}"]) {
                    	junit 'test-reports/junit/*.xml'
						junit 'flake/*.xml'
					}
                }
            }
			}
	}


	post {
		always {
            echo 'Finishing up'
            deleteDir() /* clean up our workspace */
        }
    	failure {
        	 mail to: 'eladpe@ac.sce.ac.il',
             subject: "Failed Pipeline: ${currentBuild.fullDisplayName}",
             body: "Something is wrong with ${env.BUILD_URL} "
    }
}


}
