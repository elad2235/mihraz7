pipeline {
    agent { docker 'python:3-alpine' } 
    stages {
			stage('Setup Dependency') {
				steps {
					    withEnv(["HOME=${env.WORKSPACE}"]) {
					      sh "pip install -r requirements.txt --user"

    					}
				}


        }
			stage('Run Tests') {
				steps {
					    withEnv(["HOME=${env.WORKSPACE}"]) {
					      sh "python -m unittest"
    					}
				}
			}
	}


}
